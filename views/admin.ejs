<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin panel</title>
</head>
<body>
<div class="admin-wrapper">
  <h1>Admin Panel - Products</h1>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><img src="/uploads/<%= product.image %>" alt="product image" width="100"></td>
        <td>
          <a href="/edit-product/<%= product.id %>">Edit</a>
          <a href="/delete-product/<%= product.id %>" style="color:red; margin-left:10px;">Delete</a>
        </td>
      </tr>
    <% }); %>
  </table>
  <div class="admin-options">
    <a href="/">â‡œ BACK TO MAIN PAGE</a>
    <a href="/add-product">ADD NEW PRODUCT</a>
  </div>
</div>
</body>
</html>